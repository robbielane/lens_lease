<div class="col m9 top-margin">
  <h3>New Item</h3>
  <%= form_for(@item, html: {multipart: true}) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :price %>
    <%= f.text_field :price %>
    <%= f.label :category_id %>
    <%= f.text_field :category_id %>
    <%= f.label :brand_id %>
    <%= f.text_field :brand_id %>
    <%= f.label :image, "Attach an Image" %><br />
    <%= f.file_field :image %>
    <%= f.submit "New Item", url: new_admin_item_path %>
  <% end %>
</div>
