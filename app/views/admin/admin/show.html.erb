<div class="col m9 small-top-margin">
<h3 class="center">Admin Dashboard</h3>
<div class="row">
  <div class="collection col m6 offset-m3 status_counts">
    <a href="<%= admin_dashboard_ordered_path %>" class="collection-item">Ordered<span class="badge"> <%= @count.ordered.count %></span></a>
    <a href="<%= admin_dashboard_completed_path %>" class="collection-item">Completed<span class="badge"> <%= @count.completed.count %></span></a>
    <a href="<%= admin_dashboard_cancelled_path %>" class="collection-item">Cancelled<span class="badge"> <%= @count.cancelled.count %></span></a>
    <a href="<%= admin_dashboard_paid_path %>" class="collection-item">Paid<span class="badge"> <%= @count.paid.count %></span></a>
  </div>
</div>
  <h4 class="small-top-margin center">All Rentals</h4>
  <table class="bordered highlight">
    <thead>
      <tr>
        <th>Rental Id</th>
        <th>Status</th>
        <th>Placed On</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental| %>
        <tr class="clickable" id="row_rental_<%= rental.id %>" data-url="<%= admin_rental_path(id: rental.id) %>" >
          <td><%= link_to rental.id, admin_rental_path(id: rental.id), class: 'black-text' %> </td>
          <td><%= rental.status %></td>
          <td><%= rental.created_at.strftime("%B %d, %Y") %></td>
          <td>$<%= rental.total_price %></td>
          <td>
            <%= button_to "Mark as Paid", admin_rental_path(status: 'Paid', id: rental.id), method: :patch, class: 'btn btn-small blue' %>
            <%= button_to "Cancel", admin_rental_path(status: 'Cancelled', id: rental.id), method: :patch, class: 'btn btn-small red' %>
            <%= button_to "Complete", admin_rental_path(status: 'Completed', id: rental.id), method: :patch, class: 'btn btn-small green' %> </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
