<% if current_user.recent_rental %>
<div class="col m9 top-margin">
  <div class="items left">
    <h4>Most Recent Rental</h4>
  </div>
  <table class="bordered">
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Item Name</th>
        <th colspan="2">Description</th>
      </tr>
    </thead>
    <tbody>
    <% current_user.recent_rental.each do |item| %>
      <tr id="item_row_<%= item.id %>">
        <td><%= image_tag(item.image_url, class: 'item_cart') %></td>
        <td><%= item.name %></td>
        <td colspan="2"><%= item.description %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h4 class="small-top-margin">Rental History</h4>
  <table class="bordered highlight centered">
    <thead>
      <tr>
        <th>Rental Id</th>
        <th>Placed On</th>
        <th>Status</th>
        <th>Total</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @rentals.each do |rental| %>
        <tr id="row_rental_<%= rental.id %>">
          <td class="clickable"data-url="<%= user_rental_path(id: rental.id) %>"><%= link_to rental.id, user_rental_path(id: rental.id), class: 'black-text' %> </td>
          <td class="clickable"data-url="<%= user_rental_path(id: rental.id) %>"><%= rental.created_at.strftime("%B %d, %Y") %></td>
          <td class="clickable"data-url="<%= user_rental_path(id: rental.id) %>"><%= rental.status %></td>
          <td class="clickable"data-url="<%= user_rental_path(id: rental.id) %>">$<%= rental.total_price %></td>
          <td>
          </td>
        </tr>
        <% end %>
    </tbody>
  </table>
</div>
<% else %>
<h3>No recent rentals</h3>
<% end %>
