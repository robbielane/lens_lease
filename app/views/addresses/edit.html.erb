<div class="top-margin">
  <h3 class="center">Edit Address</h3>
  <% @addresses.each do |address| %>
    <%= form_for(address, url: user_address_path) do |f| %>
    <div class="col m9 address">
      <%= f.label :line_one %>
      <%= f.text_field :line_one %>
      <%= f.label :line_two %>
      <%= f.text_field :line_two %>
      <%= f.label :city %>
      <%= f.text_field :city %>
      <%= f.label :state %>
      <%= f.text_field :state %>
      <%= f.label :zip %>
      <%= f.text_field :zip %>
      <%= f.label :country %>
      <%= f.text_field :country %>
      <%= f.submit class: 'btn blue' %>
    </div>
    <% end %>
  <% end %>
</div>
