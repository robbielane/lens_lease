<div class="col m4 item" id="item_<%= item.id %>">
  <h5><%= item.name %></h5>
  <%= image_tag(item.image_url) %>
  <p><%= item.description %></p>
  <p>Price per day: <strong>$<%= item.price %></strong></p>
  <%= button_to "Add to Cart", cart_items_path(item_id: item.id), class: 'btn blue' %>
</div>
