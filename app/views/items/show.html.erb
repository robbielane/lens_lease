<div class="row">
  <div class="col m6">
    <%= image_tag(@item.image_url, class: 'item_show') %>
  </div>
<br><br>
  <div class="col m6">
    <h3><%= @item.name %></h3>
    <p><%= @item.description %></p>
    <p>$<%= @item.price %> per day</p>
    <%= button_to('Add to cart', cart_items_path(item_id: @item.id), class: 'btn blue') %>
  </div>
</div>
